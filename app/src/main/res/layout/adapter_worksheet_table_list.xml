<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_weight="1">

            <EditText
                android:id="@+id/date"
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:background="@drawable/rectangle_border_square"
                android:clickable="false"
                android:cursorVisible="false"
                android:focusable="false"
                android:focusableInTouchMode="false"
                android:text="19/11/2023"
                android:textAlignment="center"
                android:textSize="15dp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_weight="1">

            <EditText
                android:id="@+id/br_code"
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:background="@drawable/rectangle_border_square"
                android:clickable="false"
                android:cursorVisible="false"
                android:focusable="false"
                android:focusableInTouchMode="false"
                android:inputType="textCapCharacters"
                android:padding="5dp"
                android:text="TN01"
                android:textSize="15dp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_weight="1">

            <EditText
                android:id="@+id/emp_no"
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:background="@drawable/rectangle_border_square"
                android:clickable="false"
                android:cursorVisible="false"
                android:focusable="false"
                android:focusableInTouchMode="false"
                android:inputType="textCapCharacters"
                android:text="E13113"
                android:padding="5dp"
                android:textSize="15dp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_weight="1">

            <EditText
                android:id="@+id/job_no"
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:background="@drawable/rectangle_border_square"
                android:clickable="false"
                android:cursorVisible="false"
                android:focusable="false"
                android:focusableInTouchMode="false"
                android:inputType="textCapCharacters"
                android:padding="5dp"
                android:singleLine="true"
                android:text="L-P1474"
                android:textSize="15dp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_weight="1">

            <EditText
                android:id="@+id/employee_name"
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:background="@drawable/rectangle_border_square"
                android:clickable="false"
                android:cursorVisible="false"
                android:focusable="false"
                android:text="TS1"
                android:focusableInTouchMode="false"
                android:inputType="textCapCharacters"
                android:padding="5dp"
                android:singleLine="true"
                android:textSize="15dp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_weight="1">

            <EditText
                android:id="@+id/emp_activity"
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:background="@drawable/rectangle_border_square"
                android:clickable="false"
                android:cursorVisible="false"
                android:focusable="false"
                android:text="Test Activity"
                android:focusableInTouchMode="false"
                android:inputType="textCapCharacters"
                android:padding="5dp"
                android:singleLine="true"
                android:textSize="15dp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_weight="1">

            <EditText
                android:id="@+id/work_hrs"
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:background="@drawable/rectangle_border_square"
                android:clickable="false"
                android:cursorVisible="false"
                android:focusable="false"
                android:text="8"
                android:focusableInTouchMode="false"
                android:inputType="textCapCharacters"
                android:padding="5dp"
                android:singleLine="true"
                android:textSize="15dp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_weight="1">

            <EditText
                android:id="@+id/status"
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:background="@drawable/rectangle_border_square"
                android:clickable="false"
                android:cursorVisible="false"
                android:focusable="false"
                android:text="A"
                android:focusableInTouchMode="false"
                android:inputType="textCapCharacters"
                android:padding="5dp"
                android:singleLine="true"
                android:textSize="15dp" />

        </LinearLayout>

    </LinearLayout>
</RelativeLayout>