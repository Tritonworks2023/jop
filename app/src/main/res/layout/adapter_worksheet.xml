<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_weight="1">

                <TextView
                    android:id="@+id/ad_job_no"
                    android:layout_width="match_parent"
                    android:layout_height="35dp"
                    android:background="@drawable/rectangle_border_square"
                    android:imeOptions="flagNoExtractUi"
                    android:padding="5dp"
                    android:singleLine="true"
                    android:textAlignment="center"
                    android:textSize="15dp" />


            </LinearLayout>

            <LinearLayout
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_weight="1">

                <TextView
                    android:id="@+id/ad_emp_activity"
                    android:layout_width="match_parent"
                    android:layout_height="35dp"
                    android:background="@drawable/rectangle_border_square"
                    android:imeOptions="flagNoExtractUi"
                    android:padding="5dp"
                    android:singleLine="true"
                    android:textAlignment="center"
                    android:textSize="15dp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_weight="1">

                <TextView
                    android:id="@+id/ad_work_hrs"
                    android:layout_width="match_parent"
                    android:layout_height="35dp"
                    android:background="@drawable/rectangle_border_square"
                    android:imeOptions="flagNoExtractUi"
                    android:inputType="number"
                    android:padding="5dp"
                    android:singleLine="true"
                    android:textAlignment="center"
                    android:textSize="15dp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_weight="1">

                <TextView
                    android:id="@+id/ad_km"
                    android:layout_width="match_parent"
                    android:layout_height="35dp"
                    android:background="@drawable/rectangle_border_square"
                    android:imeOptions="flagNoExtractUi"
                    android:inputType="number"
                    android:maxLength="3"
                    android:padding="5dp"
                    android:singleLine="true"
                    android:text=""
                    android:textAlignment="center"
                    android:textSize="15dp"
                    tools:ignore="SpeakableTextPresentCheck" />

            </LinearLayout>


                                <LinearLayout
                                    android:layout_width="100dp"
                                    android:layout_height="35dp"
                                    android:background="@drawable/rectangle_border_square"
                                    android:layout_weight="1">

                                    <Button
                                        android:id="@+id/ad_btn_edit"
                                        android:layout_width="match_parent"
                                        android:layout_height="30dp"
                                        android:layout_margin="2dp"
                                        android:background="#213e9a"
                                        android:paddingStart="5dp"
                                        android:paddingTop="5dp"
                                        android:paddingEnd="10dp"
                                        android:paddingBottom="5dp"
                                        android:text="Edit"
                                        android:layout_gravity="center"
                                        android:textAllCaps="false"
                                        android:textColor="#ffffff"
                                        android:theme="@style/Button1Style" />

                                </LinearLayout>

                            </LinearLayout>

                        </LinearLayout>
                    </RelativeLayout>